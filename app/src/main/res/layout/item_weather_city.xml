<?xml version="1.0" encoding="utf-8"?>


    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/whitakergroup_google_location_icon"
                    android:id="@+id/imageView" />

                <TextView
                    android:id="@+id/city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Almería"
                    android:textSize="35sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="11dp"
                    android:layout_marginStart="11dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/temperature_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textSize="35sp"
                        android:layout_alignLeft="@+id/city_name"
                        android:layout_alignStart="@+id/city_name"
                         />

                    <TextView
                        android:text="º"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:id="@+id/textView2"
                        />

                    <TextView
                        android:text="12º"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:id="@+id/temperatura_min"
                        android:layout_alignBaseline="@+id/temperature_max"
                        android:layout_alignBottom="@+id/temperature_max"
                        android:layout_alignLeft="@+id/temperature_max"
                        android:layout_alignStart="@+id/temperature_max"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_weather_city_description"
                    android:text="nubes dispersas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                     />

            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
